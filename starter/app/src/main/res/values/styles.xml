<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.Material3.Dark.NoActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.Material3.Light" />

	<style name="RoundedTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
		<item name="android:background">@drawable/rounded_bg</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
		<item name="hintTextColor">@color/text_input_grey</item>
	</style>

	<style name="MyTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:textCursorDrawable">@null</item>
		<item name="placeholderTextColor">@color/text_input_grey</item>=
	</style>

</resources>
